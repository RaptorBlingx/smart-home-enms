# Smart Home Energy Management - Environment Configuration
# All services are pre-configured with sensible defaults
# No changes needed for local development!

# Backend Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/smart_home
SECRET_KEY=smart-home-secret-key-change-in-production
DEBUG=True

# MQTT Configuration
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_TOPIC=smart_home/energy

# CORS Origins (Supports all IPs and hostnames)
ALLOW_ORIGINS=*
